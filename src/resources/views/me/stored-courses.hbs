<div class="mt-4">
  <h3>MY COURSE</h3>
  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">NAME COURSE</th>
        <th scope="col">LEVEL</th>
        <th scope="col" colspan="2">CREATE TIME</th>

      </tr>
    </thead>
    <tbody>
      {{#each courses}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.level}}</td>
          <td>{{this.createdAt}}</td>
          <td>
            <a
              href="/courses/{{this._id}}/edit"
              class="btn btn-primary"
            >Edit</a>
            <a
              href=""
              class="btn btn-danger"
              data-id="{{this._id}}"
              data-toggle="modal"
              data-target="#delete-course-modal"
            >Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<div id="delete-course-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete course?</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure to delete course?</p>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >CANCEL
        </button>
        <button
          id="btn-delete-course"
          type="button"
          class="btn btn-danger"
        >DELETE</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-course-form" method="POST"></form>

<script>
  document.addEventListener('DOMContentLoaded', function(){ var courseId; var
  deleteForm = document.forms['delete-course-form']; var btnDeleteCourse =
  document.getElementById('btn-delete-course');
  $('#delete-course-modal').on('show.bs.modal', function(event){ var button =
  $(event.relatedTarget); courseId = button.data('id'); });
  btnDeleteCourse.onclick = function(){ deleteForm.action = '/courses/' +
  courseId + '?_method=DELETE'; deleteForm.submit(); } });

</script>